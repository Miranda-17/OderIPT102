<Application x:Class="OrderManagement.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:OrderManagement.ViewModels"
             xmlns:views="clr-namespace:OrderManagement.Views">

    <Application.Resources>

        <DataTemplate DataType="{x:Type vm:HomeOrderViewModel}">
            <views:HomeOrderView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:AddOrderViewModel}">
            <views:AddOrderView/>
        </DataTemplate>

    </Application.Resources>
</Application>