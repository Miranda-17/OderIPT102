<UserControl x:Class="OrderManagement.Views.AddOrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="Transparent">

        <Border Background="White"
                Width="450"
                Padding="30"
                CornerRadius="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <StackPanel>

                <TextBlock Text="Add New Order"
                           FontSize="22"
                           FontWeight="Bold"
                           Margin="0 0 0 20"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="Customer Name"/>
                <TextBox Margin="0 5 0 15"
                         Text="{Binding CustomerName}"/>

                <TextBlock Text="Order Name"/>
                <TextBox Margin="0 5 0 15"
                         Text="{Binding OrderName}"/>

                <TextBlock Text="Order Date"/>
                <TextBox Margin="0 5 0 15"
                         Text="{Binding OrderDate}"/>

                <TextBlock Text="Total Amount"/>
                <TextBox Margin="0 5 0 15"
                         Text="{Binding TotalAmount}"/>

                <TextBlock Text="Order Status"/>
                <TextBox Margin="0 5 0 20"
                         Text="{Binding OrderStatus}"/>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">

                    <Button Content="Save"
                            Width="120"
                            Margin="0 0 10 0"
                            Background="#4CAF50"
                            Foreground="White"
                            Command="{Binding SaveCommand}"/>

                    <Button Content="Back"
                            Width="120"
                            Background="#9E9E9E"
                            Foreground="White"
                            Command="{Binding BackCommand}"/>
                </StackPanel>

            </StackPanel>

        </Border>
    </Grid>
</UserControl>