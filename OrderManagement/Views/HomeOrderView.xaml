<UserControl x:Class="OrderManagement.Views.HomeOrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0 0 0 15">

            <TextBox Width="250"
                     Height="35"
                     Margin="0 0 10 0"
                     Text="{Binding SearchText}" />

            <Button Content="Search"
                    Width="100"
                    Margin="0 0 10 0"
                    Command="{Binding SearchCommand}" />

            <Button Content="Add Order"
                    Width="120"
                    Background="#4CAF50"
                    Foreground="White"
                    Command="{Binding OpenAddOrderCommand}" />

        </StackPanel>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Orders}"
                  SelectedItem="{Binding SelectedOrder}"
                  AutoGenerateColumns="False"
                  IsReadOnly="False">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding OrderId}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Customer" Binding="{Binding CustomerName}"/>
                <DataGridTextColumn Header="Order Name" Binding="{Binding OrderName}"/>
                <DataGridTextColumn Header="Date" Binding="{Binding OrderDate}"/>
                <DataGridTextColumn Header="Total" Binding="{Binding TotalAmount}"/>
                <DataGridTextColumn Header="Status" Binding="{Binding OrderStatus}"/>
            </DataGrid.Columns>

        </DataGrid>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0 0 0 10">

            <Button Content="Update"
                    Width="100"
                    Height="35"
                    Margin="0 0 10 0"
                    Background="#2196F3"
                    Foreground="White"
                    Command="{Binding UpdateCommand}"/>

            <Button Content="Delete"
                    Width="100"
                    Height="35"
                    Background="#F44336"
                    Foreground="White"
                    Command="{Binding DeleteCommand}"/>
        </StackPanel>


    </Grid>
</UserControl>